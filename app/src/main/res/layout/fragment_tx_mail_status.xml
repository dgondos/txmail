<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TxMail$PlaceholderFragment">

    <TextView android:id="@+id/status_label_section_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_label_section_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/status_scrollview_log"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/status_label_section_title"
        android:layout_above="@+id/status_toggle_sync"
        android:background="@color/dim_foreground_disabled_material_dark" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_toggle_sync"
        android:id="@+id/status_toggle_sync"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
